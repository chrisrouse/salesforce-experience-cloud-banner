{
  "manifest_version": 3,
  "name": "Salesforce Experience Cloud Banner",
  "version": "1.0.0",
  "description": "Displays a prominent banner in Salesforce Experience Cloud site builder to indicate the current environment (Sandbox vs Production)",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Experience Cloud Banner Settings"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "salesforce-experience-cloud-banner@chrisrouse.dev",
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.builder.salesforce-experience.com/*",
        "https://*.sandbox.builder.salesforce-experience.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
